{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist/server",
    "rootDir": "server",
    "declaration": true,
    "allowJs": true
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules"]
}